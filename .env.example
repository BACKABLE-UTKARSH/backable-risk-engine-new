# ======================================================
#           BACKABLE RISK ENGINE - Environment Variables
# ======================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ======================================================
#           Database Configuration
# ======================================================
DB_HOST=memberchat-db.postgres.database.azure.com
DB_USER=backable
DB_PASSWORD=your_database_password_here
DB_PORT=5432

# User Database (separate credentials)
USER_DB_HOST=philotimo-staging-db.postgres.database.azure.com
USER_DB_NAME=philotimodb
USER_DB_USER=wchen
USER_DB_PASSWORD=your_user_db_password_here
USER_DB_PORT=5432

# ======================================================
#           Azure Storage
# ======================================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=backableunifiedstoragev1;AccountKey=your_storage_key_here;EndpointSuffix=core.windows.net

# ======================================================
#           Gemini API Keys (comma-separated)
# ======================================================
# Add your Gemini API keys separated by commas
# Example: key1,key2,key3
GEMINI_API_KEYS_RISK=your_api_key_1,your_api_key_2,your_api_key_3,your_api_key_4,your_api_key_5,your_api_key_6,your_api_key_7,your_api_key_8,your_api_key_9,your_api_key_10

# ======================================================
#           Google Vertex AI (Optional - for production)
# ======================================================
# Option 1: File-based credentials (local development)
# Place vertex-key.json in the deployment directory

# Option 2: Environment variable (Azure deployment)
# Paste the entire JSON content of your service account key
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# ======================================================
#           Application Settings
# ======================================================
# Port for the Risk Engine API (optional, defaults to 8001)
PORT=8001
